<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <style>
        .dashboard-container {
            padding: 30px;
            background-color: #f8f9fa;
        }

        .form-section, .data-section {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .form-control, .form-label {
            margin-bottom: 15px;
        }

        .action-btns {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="container dashboard-container">
        <!-- Add Product Form -->
        <div class="form-section">
            <h2>@(Model.Product != null ? "Edit Product" : "Add Product")</h2>
            <form asp-controller="Products" asp-action="@Model.Product !=null? "UpdateProducts" : "AddProduct")"method="post" enctype="multipart-form-date" id=""productForm">

                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label for="name" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="name" name="Name" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="Price" step="0.01" required>
                </div>
                <div class="mb-3">
                    <label for="imageFile" class="form-label">Upload Image</label>
                    <input type="file" class="form-control" id="imageFile" name="productImage" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Product</button>
            </form>

        </div>

        <!-- Product List -->
        <div class="data-section">
            <h2>Product List</h2>
            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Product ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        string imagePath = $"/img/{product.ProductImage}";
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            <td>
                                <img src="@product.ProductImage" alt="Product Image" class="img-thumbnail" style="max-width: 100px;" onerror="this.onerror=null; this.src='/img/default.jpg';" />
                            </td>
                            <td class="action-btns">
                                <form method="get" action="/Products/EditProduct" enctype="multipart/form-data" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="Id" value="@product.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                                </form>

                                <form method="post" action="/Products/DeleteProduct" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="Id" value="@product.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

</body>
</html>